
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DesignTokens, ThemeSemanticColors, and ComponentStyles are loaded via App.xaml from Guidelines library -->
    <!-- This file contains application-specific style overrides only -->

    <!-- Section Header - Smaller size for tab content density -->
    <Style x:Key="Section.Header" TargetType="TextBlock" BasedOn="{StaticResource Text.Subtitle}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.BodyLarge}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Field Label - Secondary color, spacing for form fields -->
    <Style x:Key="Field.Label" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Field Value - Spacing for read-only display -->
    <Style x:Key="Field.Value" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

</ResourceDictionary>
