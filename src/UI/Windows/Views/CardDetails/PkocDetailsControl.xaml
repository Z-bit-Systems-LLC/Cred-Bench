<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.PkocDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    xmlns:localization="clr-namespace:ZBitSystems.Wpf.UI.Localization;assembly=ZBitSystems.Wpf.UI"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:PKOCDetails}">

    <StackPanel Margin="{StaticResource Padding.Card}">
        <!-- Card Info -->
        <Grid Margin="{StaticResource Margin.Section}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource Gutter.Medium}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="{localization:Localize PKOC_ProtocolVersion}"
                TextAlignment="Right" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding ProtocolVersion, FallbackValue='N/A'}"
                FontFamily="Consolas"
                FontWeight="Medium" />
        </Grid>

        <!-- Credential Size Selector -->
        <TextBlock Text="{localization:Localize PKOC_Credential}"
            Style="{StaticResource Section.Header}" />
        <ComboBox x:Name="BitSizeSelector"
            Style="{StaticResource ComboBox.Standard}"
            SelectedIndex="0"
            Margin="0,0,0,12"
            Width="280"
            HorizontalAlignment="Left">
            <ComboBoxItem Content="{localization:Localize PKOC_256BitOption}" />
            <ComboBoxItem Content="{localization:Localize PKOC_75BitOption}" />
            <ComboBoxItem Content="{localization:Localize PKOC_64BitOption}" />
        </ComboBox>

        <!-- 256-bit Credential -->
        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=BitSizeSelector}" Value="0">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="{localization:Localize PKOC_Hex}"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential256Hex, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                Margin="0,0,0,8" />

            <TextBlock Text="{localization:Localize PKOC_WiegandBits256}"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential256Bits, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                TextWrapping="Wrap" />
        </StackPanel>

        <!-- 75-bit Credential -->
        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=BitSizeSelector}" Value="1">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="{localization:Localize PKOC_Hex}"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential75Hex, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                Margin="0,0,0,8" />

            <TextBlock Text="{localization:Localize PKOC_WiegandBits75}"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential75Bits, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10" />
        </StackPanel>

        <!-- 64-bit Credential -->
        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=BitSizeSelector}" Value="2">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="{localization:Localize PKOC_Hex}"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential64Hex, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                Margin="0,0,0,8" />

            <TextBlock Text="{localization:Localize PKOC_WiegandBits64}"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential64Bits, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10" />
        </StackPanel>
    </StackPanel>
</UserControl>
