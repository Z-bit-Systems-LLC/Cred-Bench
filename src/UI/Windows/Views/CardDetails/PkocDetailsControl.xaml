<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.PkocDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:PKOCDetails}">

    <StackPanel Margin="{StaticResource Padding.Card}">
        <!-- Card Info -->
        <Grid Margin="{StaticResource Margin.Section}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource Gutter.Medium}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Protocol Version:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding ProtocolVersion, FallbackValue='N/A'}"
                FontFamily="Consolas"
                FontWeight="Medium" />
        </Grid>

        <!-- Credential Size Selector -->
        <TextBlock Text="Credential"
            Style="{StaticResource Section.Header}" />
        <ComboBox x:Name="BitSizeSelector"
            Style="{StaticResource ComboBox.Standard}"
            SelectedIndex="0"
            Margin="0,0,0,12"
            Width="280"
            HorizontalAlignment="Left">
            <ComboBoxItem Content="256-bit (Full X Component)" />
            <ComboBoxItem Content="75-bit (Recommended for Legacy)" />
            <ComboBoxItem Content="64-bit" />
        </ComboBox>

        <!-- 256-bit Credential -->
        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=BitSizeSelector}" Value="0">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="Hex"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential256Hex, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                Margin="0,0,0,8" />

            <TextBlock Text="Wiegand Bits (256)"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential256Bits, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                TextWrapping="Wrap" />
        </StackPanel>

        <!-- 75-bit Credential -->
        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=BitSizeSelector}" Value="1">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="Hex"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential75Hex, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                Margin="0,0,0,8" />

            <TextBlock Text="Wiegand Bits (75)"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential75Bits, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10" />
        </StackPanel>

        <!-- 64-bit Credential -->
        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=BitSizeSelector}" Value="2">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="Hex"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential64Hex, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10"
                Margin="0,0,0,8" />

            <TextBlock Text="Wiegand Bits (64)"
                Style="{StaticResource Field.Label}"
                FontSize="{StaticResource FontSize.Caption}" />
            <TextBox Text="{Binding Credential64Bits, Mode=OneWay, FallbackValue='N/A'}"
                Style="{StaticResource TextBox.Copyable}"
                FontSize="10" />
        </StackPanel>
    </StackPanel>
</UserControl>
