<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.DesfireDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:DESFireDetails}">

    <StackPanel Margin="{StaticResource Padding.Card}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource Gutter.Medium}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Card Type:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding CardType, FallbackValue='DESFire'}"
                FontWeight="Medium" />

            <TextBlock Grid.Row="1" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Version:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="1" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding HardwareVersion, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="2" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Storage:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="2" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding StorageSize, FallbackValue='N/A'}"
                FontFamily="Consolas" />
        </Grid>
    </StackPanel>
</UserControl>
