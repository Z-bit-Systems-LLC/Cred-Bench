<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.GeneralDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:GeneralCardDetails}">

    <StackPanel Margin="12">
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Text="Reader:"
                TextAlignment="Right"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,4" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Text="{Binding ReaderName, FallbackValue='N/A'}"
                FontWeight="Medium"
                TextWrapping="Wrap"
                Margin="0,0,0,4" />

            <TextBlock Grid.Row="1" Grid.Column="0"
                Text="Protocol:"
                TextAlignment="Right"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,4" />
            <TextBlock Grid.Row="1" Grid.Column="2"
                Text="{Binding Protocol, FallbackValue='N/A'}"
                FontFamily="Consolas"
                Margin="0,0,0,4" />
        </Grid>

        <TextBlock Text="ATR"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            FontSize="11"
            Margin="0,0,0,4" />
        <TextBox Text="{Binding ATR, Mode=OneWay, FallbackValue='N/A'}"
            Style="{StaticResource TextBox.Copyable}"
            FontSize="10"
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
