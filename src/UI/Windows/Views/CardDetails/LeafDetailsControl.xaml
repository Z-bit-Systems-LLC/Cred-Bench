<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.LeafDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    xmlns:localization="clr-namespace:ZBitSystems.Wpf.UI.Localization;assembly=ZBitSystems.Wpf.UI"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:LEAFDetails}">

    <StackPanel Margin="{StaticResource Padding.Card}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource Gutter.Medium}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="{localization:Localize LEAF_ApplicationType}"
                TextAlignment="Right" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding ApplicationType, FallbackValue='Unknown'}"
                FontWeight="Medium" />

            <TextBlock Grid.Row="1" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="{localization:Localize LEAF_DetectedAIDs}"
                TextAlignment="Right"
                VerticalAlignment="Top" />
            <ItemsControl Grid.Row="1" Grid.Column="2"
                ItemsSource="{Binding DetectedAIDs}"
                Margin="0,0,0,4">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding}"
                            FontFamily="Consolas"
                            FontSize="{StaticResource FontSize.Caption}"
                            Margin="0,0,0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </StackPanel>
</UserControl>
