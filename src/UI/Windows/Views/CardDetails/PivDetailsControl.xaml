<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.PivDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:PIVDetails}">

    <StackPanel Margin="{StaticResource Padding.Card}">
        <!-- Card Info -->
        <Grid Margin="{StaticResource Margin.Section}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource Gutter.Medium}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Status:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Style="{StaticResource Text.Success}"
                Text="{Binding Status, FallbackValue='Detected'}"
                FontWeight="Medium"
                Margin="0,0,0,4" />
        </Grid>

        <!-- FASC-N Fields -->
        <TextBlock Text="FASC-N"
            Style="{StaticResource Section.Header}" />

        <Grid Margin="{StaticResource Margin.Section}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource Gutter.Medium}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Agency Code:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="0" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding AgencyCode, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="1" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="System Code:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="1" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding SystemCode, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="2" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Credential #:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="2" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding CredentialNumber, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="3" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Credential Series:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="3" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding CredentialSeries, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="4" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="ICI:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="4" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding IndividualCredentialIssue, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="5" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Person Identifier:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="5" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding PersonIdentifier, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="6" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Org. Category:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="6" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding OrganizationalCategory, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="7" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="Org. Identifier:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="7" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding OrganizationalIdentifier, FallbackValue='N/A'}"
                FontFamily="Consolas" />

            <TextBlock Grid.Row="8" Grid.Column="0"
                Style="{StaticResource Field.Label}"
                Text="POA:"
                TextAlignment="Right" />
            <TextBlock Grid.Row="8" Grid.Column="2"
                Style="{StaticResource Field.Value}"
                Text="{Binding PersonOrgAssociation, FallbackValue='N/A'}"
                FontFamily="Consolas" />
        </Grid>

        <!-- 200-bit Wiegand -->
        <TextBlock Text="Hex"
            Style="{StaticResource Field.Label}"
            FontSize="{StaticResource FontSize.Caption}" />
        <TextBox Text="{Binding FASCNHex, Mode=OneWay, FallbackValue='N/A'}"
            Style="{StaticResource TextBox.Copyable}"
            FontSize="10"
            Margin="0,0,0,8" />

        <TextBlock Text="{Binding WiegandBitsLabel, FallbackValue='Wiegand Bits'}"
            Style="{StaticResource Field.Label}"
            FontSize="{StaticResource FontSize.Caption}" />
        <TextBox Text="{Binding FASCNWiegandBits, Mode=OneWay, FallbackValue='N/A'}"
            Style="{StaticResource TextBox.Copyable}"
            FontSize="10"
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
