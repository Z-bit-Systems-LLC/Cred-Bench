<UserControl
    x:Class="CredBench.Windows.Views.CardDetails.PivDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CredBench.Core.Models.TechnologyDetails;assembly=Core"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance models:PIVDetails}">

    <StackPanel Margin="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Text="Status:"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,8" />
            <TextBlock Grid.Row="0" Grid.Column="1"
                Text="{Binding Status, FallbackValue='Detected'}"
                Foreground="#22C55E"
                FontWeight="Medium"
                Margin="0,0,0,8" />

            <TextBlock Grid.Row="1" Grid.Column="0"
                Text="CHUID:"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,4" />
            <TextBlock Grid.Row="1" Grid.Column="1"
                Text="{Binding CHUID, FallbackValue='Not readable (may require PIN)'}"
                FontFamily="Consolas"
                FontSize="10"
                TextWrapping="Wrap"
                Margin="0,0,0,4" />
        </Grid>
    </StackPanel>
</UserControl>
